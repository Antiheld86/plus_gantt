<h2><%= l(:label_plusgantt)%> - <%= @project.name %></h2> 

<div id="import-details">
  <div id="import-progress"><div id="progress-label">0 / <%= @issues.size.to_i %></div></div>
</div>

<%= javascript_tag do %>
$(document).ready(function() {
  $('#import-details').addClass('ajax-loading');
  $('#import-progress').progressbar({value: 0, max: <%= @issues.size.to_i %>});
  $.ajax({
    url: '<%= plusgantt_dashboard_run_path(:project_id => @project, :format => 'js') %>',
    type: 'post'
  });
});
<% end %>
